<div class="container">
    <div class="header">
        <h1>Burger <span id="burgerPic"><a href=""></a></span> Devour!</h1>
        <h3>Try these delicious burgers at any time!</h3>
    </div>
    <hr>
    <div class="listOBurgers">
        <div class="col-sm-5">
            <h3>Burgers to Devour!</h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-5">
            <h3>Burgers You Devoured!</h3>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    <p>{{this.id}}. {{this.burger_name}}</p>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="newBurger">
        <div class="row d-flex justify-content-center">
            <h1>Eat-Da-Burger!</h1>
        </div>
        <div class="row d-flex justify-content-center">
            <form class="create-form">
                <div class="form-group">
                    <textarea id="burgerinput" name="burger" rows="5" cols="40"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Add Burger</button>
                <p>Add your own burger above!</p>
            </form>
        </div>
    </div>


</div>